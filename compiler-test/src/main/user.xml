<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="githubUser"
            type="com.glureau.compiler.test.api.dto.GithubUser" />

        <variable
            name="router"
            type="com.glureau.compiler.test.todo.Router" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/geno_avatar_url"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/colorAccent" />

        <TextView
            android:id="@+id/geno_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{githubUser.name}"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/geno_avatar_url"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="My Super Name" />

        <TextView
            android:id="@+id/geno_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/ellipsis"
            app:layout_constraintStart_toEndOf="@+id/geno_avatar_url"
            app:layout_constraintTop_toBottomOf="@+id/geno_name"
            tools:text="Member since 1 avr. 2010" />

        <TextView
            android:id="@+id/geno_html_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:autoLink="web"
            android:text="@string/ellipsis"
            app:layout_constraintStart_toEndOf="@+id/geno_avatar_url"
            app:layout_constraintTop_toBottomOf="@+id/geno_created_at"
            tools:text="https://glureau.com" />

        <TextView
            android:id="@+id/geno_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/ellipsis"
            app:layout_constraintStart_toEndOf="@+id/geno_avatar_url"
            app:layout_constraintTop_toBottomOf="@+id/geno_html_url"
            tools:text="BeTomorrow" />

        <TextView
            android:id="@+id/geno_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/ellipsis"
            app:layout_constraintStart_toEndOf="@+id/geno_avatar_url"
            app:layout_constraintTop_toBottomOf="@+id/geno_company"
            tools:text="Bordeaux" />

        <TextView
            android:id="@+id/geno_followers"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/ellipsis"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geno_location"
            tools:text="402" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingBottom="8dp"
            android:text="@string/followers"
            app:layout_constraintEnd_toEndOf="@+id/geno_followers"
            app:layout_constraintStart_toStartOf="@+id/geno_followers"
            app:layout_constraintTop_toBottomOf="@+id/geno_followers" />

        <TextView
            android:id="@+id/geno_following"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/ellipsis"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/geno_followers"
            app:layout_constraintTop_toTopOf="@+id/geno_followers"
            tools:text="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/following"
            app:layout_constraintEnd_toEndOf="@+id/geno_following"
            app:layout_constraintStart_toStartOf="@+id/geno_following"
            app:layout_constraintTop_toBottomOf="@+id/geno_following" />

        <TextView
            android:id="@+id/geno_public_repos"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/ellipsis"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/geno_following"
            app:layout_constraintTop_toTopOf="@+id/geno_followers"
            tools:layout_editor_absoluteY="131dp"
            tools:text="11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/repository"
            app:layout_constraintEnd_toEndOf="@+id/geno_public_repos"
            app:layout_constraintStart_toStartOf="@+id/geno_public_repos"
            app:layout_constraintTop_toBottomOf="@+id/geno_public_repos" />

        <TextView
            android:id="@+id/geno_public_gists"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/ellipsis"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/geno_public_repos"
            app:layout_constraintTop_toBottomOf="@+id/geno_location"
            app:layout_constraintTop_toTopOf="@+id/geno_followers"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/gists"
            app:layout_constraintEnd_toEndOf="@+id/geno_public_gists"
            app:layout_constraintStart_toStartOf="@+id/geno_public_gists"
            app:layout_constraintTop_toBottomOf="@+id/geno_public_gists" />

    </android.support.constraint.ConstraintLayout>
</layout>