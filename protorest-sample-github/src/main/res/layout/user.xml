<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fieldImageRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/fieldBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/protorest_avatar_url_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/protorest_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/robotocondensed_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/protorest_avatar_url_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="My Super Name" />

    <TextView
        android:id="@+id/protorest_foo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/protorest_avatar_url_image"
        app:layout_constraintTop_toBottomOf="@+id/protorest_name_value"
        tools:text="Member since 1 avr. 2010" />

    <TextView
        android:id="@+id/protorest_url_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autoLink="web"
        app:layout_constraintStart_toEndOf="@+id/protorest_avatar_url_image"
        app:layout_constraintTop_toBottomOf="@+id/protorest_foo_value"
        tools:text="https://glureau.com" />

    <TextView
        android:id="@+id/protorest_company_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/protorest_avatar_url_image"
        app:layout_constraintTop_toBottomOf="@+id/protorest_url_value"
        tools:text="BeTomorrow" />

    <TextView
        android:id="@+id/protorest_city_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/protorest_avatar_url_image"
        app:layout_constraintTop_toBottomOf="@+id/protorest_company_value"
        tools:text="Bordeaux" />

    <TextView
        android:id="@+id/protorest_followers_value"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/robotocondensed_bold"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protorest_city_value"
        tools:text="402" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingBottom="8dp"
        android:text="@string/followers"
        app:layout_constraintEnd_toEndOf="@+id/protorest_followers_value"
        app:layout_constraintStart_toStartOf="@+id/protorest_followers_value"
        app:layout_constraintTop_toBottomOf="@+id/protorest_followers_value" />

    <TextView
        android:id="@+id/protorest_following_value"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/robotocondensed_bold"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/protorest_followers_value"
        app:layout_constraintTop_toTopOf="@+id/protorest_followers_value"
        tools:text="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/following"
        app:layout_constraintEnd_toEndOf="@+id/protorest_following_value"
        app:layout_constraintStart_toStartOf="@+id/protorest_following_value"
        app:layout_constraintTop_toBottomOf="@+id/protorest_following_value" />

    <TextView
        android:id="@+id/protorest_repository_value"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/robotocondensed_bold"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/protorest_following_value"
        app:layout_constraintTop_toTopOf="@+id/protorest_followers_value"
        tools:layout_editor_absoluteY="131dp"
        tools:text="11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/repository"
        app:layout_constraintEnd_toEndOf="@+id/protorest_repository_value"
        app:layout_constraintStart_toStartOf="@+id/protorest_repository_value"
        app:layout_constraintTop_toBottomOf="@+id/protorest_repository_value" />

    <TextView
        android:id="@+id/protorest_gists_value"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/robotocondensed_bold"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/protorest_repository_value"
        app:layout_constraintTop_toBottomOf="@+id/protorest_city_value"
        app:layout_constraintTop_toTopOf="@+id/protorest_followers_value"
        tools:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/gists"
        app:layout_constraintEnd_toEndOf="@+id/protorest_gists_value"
        app:layout_constraintStart_toStartOf="@+id/protorest_gists_value"
        app:layout_constraintTop_toBottomOf="@+id/protorest_gists_value" />

</android.support.constraint.ConstraintLayout>