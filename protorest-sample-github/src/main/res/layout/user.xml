<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fieldImageRoot"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="5dp"
    android:background="@color/fieldBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/protorest_avatar_url_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded"
        android:clipToOutline="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/protorest_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/protorest_avatar_url_image"
        android:fontFamily="@font/robotocondensed_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="My Super Name" />

    <TextView
        android:id="@+id/protorest_foo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_name_value"
        android:layout_toEndOf="@id/protorest_avatar_url_image"
        tools:text="Member since 1 avr. 2010" />

    <TextView
        android:id="@+id/protorest_url_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_foo_value"
        android:layout_toEndOf="@id/protorest_avatar_url_image"
        android:autoLink="web"
        tools:text="https://glureau.com" />

    <TextView
        android:id="@+id/protorest_company_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_url_value"
        android:layout_toEndOf="@id/protorest_avatar_url_image"
        tools:text="BeTomorrow" />

    <TextView
        android:id="@+id/protorest_city_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_company_value"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/protorest_avatar_url_image"
        tools:text="Bordeaux" />

    <TextView
        android:id="@+id/protorest_followers_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_city_value"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/robotocondensed_bold"
        android:textSize="20sp"
        tools:text="402" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_followers_value"
        android:layout_toRightOf="@id/protorest_followers_value"
        android:text="Followers" />

    <TextView
        android:id="@+id/protorest_following_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_city_value"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/protorest_followers_value"
        android:fontFamily="@font/robotocondensed_bold"
        android:textSize="20sp"
        tools:text="5" />

    <TextView
        android:id="@+id/protorest_repository_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_city_value"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/protorest_following_value"
        android:fontFamily="@font/robotocondensed_bold"
        android:textSize="20sp"
        tools:text="11" />

    <TextView
        android:id="@+id/protorest_gists_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/protorest_city_value"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/protorest_repository_value"
        android:fontFamily="@font/robotocondensed_bold"
        android:textSize="20sp"
        tools:text="1" />

</RelativeLayout>